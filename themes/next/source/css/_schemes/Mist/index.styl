//
// Mist scheme
// ==================================================
@import '_base';
@import '_header';
@import '_menu';
@import '_posts-expand';
@import '../Muse/_sidebar';

// Components
// --------------------------------------------------
.btn {
  border-radius: 0;
  border-width: 2px;
  padding: 0 10px;
}

.headband {
  display: none;
}

// Page - Container
// --------------------------------------------------
.container .main-inner {
  // margin-top: 80px;
  margin-top: 3em; /* 自定义样式 */
  +mobile() {
    margin-top: 2em; /* 自定义样式 */
    width: auto;
  }
}

// Pagination
// --------------------------------------------------
.pagination {
  // margin: 120px 0 0;
  margin: 4em 0 0;/* 自定义样式 */
  text-align: left;

  +mobile() {
    // margin: 80px 10px 0;
    margin: 2em 0.875em 0;/* 自定义样式 */
    text-align: center;
  }
}

// Footer
// --------------------------------------------------
.footer {
  background: $whitesmoke;
  color: $grey-dim;
  // margin-top: 80px;
  margin-top: 3em;/* 自定义样式 */
  padding: 10px 0;
}

.footer-inner {
  text-align: left;

  +mobile() {
    text-align: center;
    width: auto;
  }
}
